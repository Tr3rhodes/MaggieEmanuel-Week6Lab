<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= paginate @posts %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %>Written by: <%= post.user.username %></td>
          <%= if post.user_id != current_user.id %></td>
          <td> <%= button_to 'Stop Following', unfollow_path(:id => post.id) %></td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to "Users", user_index_path %>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
