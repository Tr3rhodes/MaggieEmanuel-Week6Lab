<div class="container col-md-offset-2">
  <h1>Listing Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Timeline</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= paginate @posts %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.username %>:<%= post.body %></td>
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

<%= link_to "Users", users_path %>


  <%= link_to 'Profile', current_user %> |
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
</div>
