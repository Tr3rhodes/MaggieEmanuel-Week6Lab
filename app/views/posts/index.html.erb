<p id="notice"><%= notice %></p>

<div class="container col-md-offset-2">
  <h1>Listing Posts</h1>

  <table>
    <thead>
      <tr>
        <th><%= current_user %>'s Timline</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= paginate @posts %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.username %>:<%= post.body %>By: </td>
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>


  <%= link_to 'New Post', new_post_path %> |
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
</div>
