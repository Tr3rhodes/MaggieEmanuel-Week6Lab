<%= render :partial => 'header'%>
<div class="container col-md-offset-4 col-md-4 center" style="padding-top: 100px">
  <h2>Choose a photo for your profile</h2>
  <%= form_for(@user, :url => wizard_path, :method => :put) do |f| %>
    <div class="field">
      <%= f.text_field :user_photo, :placeholder => 'url' %>
    </div>
    <div class="row">
      <%= f.submit 'Next', :class => 'btn brn-primary' %>
  <% end %>
      <%= link_to 'skip', next_wizard_path %>
    </div>
</div>
